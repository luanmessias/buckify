{
	"name": "next-buckify",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "next dev -H 0.0.0.0",
		"build": "next build",
		"start": "next start",
		"lint": "pnpm biome lint .",
		"format": "pnpm biome format --write .",
		"prepare": "husky",
		"test": "vitest --run",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui --coverage",
		"lint:architecture": "eslint 'src/**/*.{ts,tsx}'",
		"check:comments": "tsx src/scripts/check-comments.ts",
		"fix:comments": "tsx src/scripts/fix-comments-ai.ts",
		"i18n:types": "i18next-resources-for-ts interface -i ./src/messages -o ./src/@types/resources.ts",
		"i18n:sync": "tsx src/scripts/sync-translations.ts",
		"i18n:prune": "tsx src/scripts/prune-translations.ts",
		"check:all": "pnpm biome format --write . && pnpm biome check --write --unsafe . && pnpm i18n:types && pnpm i18n:sync && pnpm i18n:prune && pnpm lint:architecture && pnpm fix:comments && pnpm check:comments && pnpm test"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,css}": "bash -c 'pnpm check:all'"
	},
	"dependencies": {
		"@apollo/client": "^4.0.10",
		"@apollo/client-integration-nextjs": "^0.14.1",
		"@apollo/server": "^5.2.0",
